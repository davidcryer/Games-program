<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.davidcryer.gameapplication170715.ChessActivity">

    <ImageView android:id="@+id/chess_zelda_chest_image"
        android:layout_width="fill_parent"
        android:layout_height="300dip"
        android:layout_marginTop="50dip"
        android:layout_centerHorizontal="true"
        android:src="@drawable/zelda_chest"/>

    <Button
        android:text="-t."
        android:textSize="80sp"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/chess_zelda_chest_image"
        android:onClick="chess_button"/>

</RelativeLayout>
